@import 'nib'
#leftPanel
  position: absolute
  counter-reset: section
  height: 100%
  width: 64px
  background-color: #222

  .item
    position: relative
    width: 48px
    height: 48px
    margin: 18px 6px 18px 6px
    border-radius: 6px
    background-color: #EEE
    background-image: url(svg/book.svg)
    background-size: 48px 48px
    cursor: pointer

    &::after
      counter-increment: section
      content: counter(section)
      line-height: 18px
      font-size: 16px
      width: 18px
      height: 18px
      border-radius: 12px
      background-color: #222
      position: absolute
      top: 36px
      left: 36px
      text-align: center
      color: #EEE

#leftPanelSecond
  display: none
  position: absolute
  height: 100%
  width: 64px
  background-color: #444
  left: 64px

@import 'nib'
#popout
  transition: opacity .4s ease-out
  display: none
  position: absolute
  left: 0
  top: 0
  width: 100%
  height: 100%
  opacity: 0

  .black
    position: absolute
    width: 100%
    height: 100%
    background-color: rgba(0, 0, 0, 0.6)

  .main
    position: absolute
    width: 20%
    height: 40%
    border-radius: 5px
    padding-left: 20px
    padding-right: 20px
    left: 50%
    top: 50%
    transform: translate(-50%, -50%)
    background-color: #EEE

    &::after
      content: 'click to dismiss'
      font-family: 'Helvetica Neue', Helvetica, sans-serif
      font-size: 12px
      font-weight: lighter
      letter-spacing: 1px
      color: black
      position: absolute
      bottom: 20px
      left: 50%
      transform: translateX(-50%)

    h1
      text-align: center
      font-size: 24px
      margin: 24px
